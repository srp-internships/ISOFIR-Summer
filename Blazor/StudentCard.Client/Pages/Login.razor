@page "/Login"
<div class="text-center">
    <form class="col-4" style="margin: 0 auto">
        <div class="form-outline mb-4">
            <input type="email" id="form2Example1" class="form-control" @bind="Username"/>
            <label class="form-label" for="form2Example1">Email address</label>
        </div>

        <div class="form-outline mb-4">
            <input type="password" id="form2Example2" class="form-control" @bind="Password"/>
            <label class="form-label" for="form2Example2">Password</label>
        </div>

        <button type="button" class="btn btn-primary btn-block mb-4" @onclick="LoginAsync">Sign in</button>
    
    </form>
    <div class="text-center" @bind="ErrorMessage">
    </div>
</div>
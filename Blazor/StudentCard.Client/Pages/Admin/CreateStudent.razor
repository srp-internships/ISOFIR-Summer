@page "/CreateStudent"

<PageTitle>Create a student</PageTitle>

<EditForm Model="_student" OnSubmit="SubmitAsync">
    <section class="vh-100" style="background-color: #2779e2;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-9">
                    <h1 class="text-white mb-4">Create a student</h1>
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body">
                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">Full name</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <InputText @bind-Value="_student.FullName" placeholder="Full Name"></InputText>
                                </div>
                            </div>

                            <hr class="mx-n3">
                            
                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">Course</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <InputNumber @bind-Value="_student.Course" placeholder="Course"></InputNumber>
                                </div>
                            </div>

                            <hr class="mx-n3">
                            
                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">Departament</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <InputText @bind-Value="_student.Department" placeholder="Departament"></InputText>
                                </div>
                            </div>

                            <hr class="mx-n3">
                            
                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">Group</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <InputText @bind-Value="_student.Group" placeholder="Group"></InputText>
                                </div>
                            </div>

                            <hr class="mx-n3">
                            
                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">SpecialtyCode</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <InputText @bind-Value="_student.SpecialtyCode" placeholder="SpecialtyCode"></InputText>
                                </div>
                            </div>

                            <hr class="mx-n3">
                            
                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">
                                    <h6 class="mb-0">dept</h6>
                                </div>
                                <div class="col-md-9 pe-5">
                                    <InputNumber @bind-Value="_student.Dept" placeholder="Dept"></InputNumber>
                                </div>
                            </div>

                            <hr class="mx-n3">
                            
                            <div class="px-5 py-4">
                                <button type="submit" class="btn btn-primary btn-lg">Create</button>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</EditForm>
<Window x:Class="Report.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Button Click="TruncateDatabase">Удалить и создать новую базу данных</Button>
        <Label Margin="0 10 0 0">Логин</Label>
        <TextBox Name="Login"></TextBox>
        <Label Margin="0 10 0 0">Пароль</Label>
        <TextBox Name="Password"></TextBox>
        <Button Click="CreateUser">Создать пользователя</Button>
    </StackPanel>
</Window>
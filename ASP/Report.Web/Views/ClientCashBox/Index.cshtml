        `<label>Имения доллар:${cashUsd}</label><label>Имения сомони:${cashTjs}</label>`;
    document.getElementById("CashBoxInfo1").innerHTML=
        `<label>Имения доллар:${cashUsd}</label><label>Имения сомони:${cashTjs}</label>`;
    }
</script>